// SAQ Form Panel Component
// 供應商稽核問卷表單組件

@import '../variables'

.saq-form-panel
  display flex
  width 100%
  max-width 1200px
  background white
  border-radius 16px
  box-shadow panel-shadow
  padding 32px 40px
  flex-direction column
  gap 0
  position relative
  z-index 2

  .summary-title
    font-size 1.75rem
    font-weight 600
    color primary-color
    margin-bottom 24px

  .airtable-form-wrapper
    width 100%
    border-radius 12px
    overflow hidden

    .airtable-embed
      width 100%
      min-height 640px
      border none !important
      outline none
      border-radius 12px
      background transparent

// Mobile Specific Styles
@media (max-width: 768px)
  .saq-form-panel
    width 100%
    padding 28px 24px

    .summary-title
      font-size 1.5rem
      font-weight 600
      color #143463
      letter-spacing -0.9px

    .airtable-form-wrapper

      .airtable-embed
        min-height 640px

